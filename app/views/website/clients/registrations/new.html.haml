= content_for :banner do
	= render partial: "/website/nivo-slider"

#cadastro
	%h2 Cadastro de Cliente
	- if @data.new_users?
		= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
			- unless devise_error_messages!.blank?
				.error_explanation{style: "color: #d22f00;"}
					%h3 Verifique o preenchimento dos campos abaixo
					%h4 Certifique-se de preencher seu nome e sobrenome

			= render partial: "form", locals: {f: f}

			.left= link_to "Já possui acesso? Login", new_session_path(resource_name), class: "button signup"
			.left= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "button"
	- else
		%h3 Devido a situação atual o site está momentaneamente fechado para novos cadastros
