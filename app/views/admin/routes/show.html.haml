.right= link_to "Editar", edit_admin_route_path(@admin_route), class: "button edit"

.space

.map
	.text
		%h3= "#{I18n.translate(Date::DAYNAMES[@admin_route.day])} (#{number_to_currency(@admin_route.value)})"
		%h2= @admin_route.name
		%p
