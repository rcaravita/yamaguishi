%h1 Categoria

= form_for @admin_category do |f|
	- if @admin_category.errors.any?
		#error_explanation
			%h2= "#{pluralize(@admin_category.errors.count, "problema")} #{t 'errors.message'}"
			%ul
				- @admin_category.errors.full_messages.each do |msg|
					%li= msg

	.field
		%label Nome
		= f.text_field :name
	.field
		%label Link
		= f.text_field :link
	.actions
		= f.submit 'Salvar', class: "save"
